# SPA routing for Vite/React
# Works when deployed at a sub-path (as long as this file sits alongside index.html)

<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On

  # If the requested path is a real file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, route everything to the SPA entry
  RewriteRule . index.html [L]
</IfModule>

# Correct MIME for WebAssembly (needed for some local-LLM / ONNX runtimes)
AddType application/wasm .wasm

# Sensible caching: cache hashed assets aggressively, keep HTML fresh
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|css|png|jpg|jpeg|gif|svg|webp|ico|woff2?|wasm)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "^(index\.html)$">
    Header set Cache-Control "no-cache"
  </FilesMatch>
</IfModule>

# Optional compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css application/javascript application/json application/wasm image/svg+xml
</IfModule>
