# SPA routing for Vite/React
# Works when deployed at a sub-path (as long as this file sits alongside index.html)

<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On

  # If the requested path is a real file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, route everything to the SPA entry
  RewriteRule . index.html [L]
</IfModule>

# Optional: long-cache fingerprinted assets (safe for Vite assets/*)
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|webp|ico|woff2?)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache"
  </FilesMatch>
</IfModule>

AddType application/wasm .wasm
